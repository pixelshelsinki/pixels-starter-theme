{#
 # Template for a Bootstrap button using the <input> element.
 #
 # @see https://getbootstrap.com/docs/4.0/components/buttons/
 # @version 1.0.0
 #
 # @var classes   Classes to be applied to this button.
 # @var data      Data attributes to be added to this button.
 # @var disabled  If this button is disabled.
 # @var label     Label for the button, cannot contain HTML.
 # @var type      The type for this button (button, reset or submit)
 #}

{% if pattern_library %}
  {% set classes = 'btn-default' %}
  {% set data = { example: 'thing' } %}
  {% set disabled = false %}
  {% set label = 'Input' %}
  {% set type = 'submit' %}
{% endif %}

{% for key, datum in data %}
  {% set data_attributes = data_attributes ~ 'data-' ~ key ~ '=\'' ~ datum ~ '\' ' %}
{% endfor %}

<input class="btn {{ classes }}" type="{{ type ? type : 'submit' }}" {{ data_attributes ? data_attributes }} {{ disabled ? 'disabled' }} value="{{ label }}">
