{#
 # Template for a single content's teaser.
 #}

<article class="teaser teaser-{{ post.post_type }}" id="teaser-{{ post.ID }}">

	{% block content %}

		<h2 class="teaser-title teaser-title-{{ post.post_type }}">
      <a href="{{ post.link }}">{{ post.title }}</a>
    </h2>

		<div class="teaser-content teaser-content-{{ post.post_type }}">
			<p>{{ post.preview.read_more(__('Read more<span class="sr-only"> about %s</span>', 'pixels-text-domain')|format(post.title)) }}</p>
		</div>

		{% if post.get_thumbnail %}
			<img src="{{ post.thumbnail.src }}" alt="{{ post.thumbnail.alt }}" class="img-fluid">
		{% endif %}

	{% endblock %}

</article>
