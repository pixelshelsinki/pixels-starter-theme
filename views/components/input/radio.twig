{#
 # @version 1.0.0
 #
 # @var checked           If the input is checked.
 # @var classes           Classes for the input.
 # @var disabled          If the input is disabled.
 # @var id                Id attribute for the input.
 # @var label             Label for the input.
 # @var label_classes     Label for the <label> element.
 # @var name              Name attribute for the input
 # @var required          If the input is required.
 # @var value             The value of the input.
 #}

{% if pattern_library %}
  {% set checked = false %}
  {% set classes = '' %}
  {% set disabled = false %}
  {% set id = '' %}
  {% set label = '' %}
  {% set label_classes = '' %}
  {% set name = '' %}
  {% set required = false %}
  {% set value = '' %}
{% endif %}

<div class="{{ classes }} {{ disabled ? 'disabled' }}">
  <label class="{{ label_classes }}">
    <input type="radio" name="{{ name }}" id="{{ id }}" value="{{ value }}" {{ checked ? 'checked' }} {{ disabled ? 'disabled' }} {{ required ? 'required' }}>
    {{ label }}
  </label>
</div>
